<% if user_signed_in? %>
<div class="col-md-12 block">
  <h1>Friends table</h1>
  <table class="table table-striped table-bordered table-hover white-space: wrap">
    <thead class="table-dark">
      <tr>
        <th>First Name</th>  
        <th>Last Name</th> 
        <th>Email</th> 
        <th>Phone</th> 
        <th>Twitter</th>
        <th>User Id</th>
        <th colspan="6"></th>  
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
        <tr>
          <th><%= link_to friend.first_name, friend %></th>  
          <th><%= friend.last_name %></th> 
          <th><%= friend.email %></th> 
          <th><%= friend.phone %></th> 
          <th style="overflow-wrap: anywhere;"><%= friend.twitter %></th>
          <th><%= friend.user.id %></th> 
          <th><p><%= link_to "View", friend, class:"btn btn-secondary" %></p></th>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

</div>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>

<% else %>
<h1>Home page</h1>
<% end %>